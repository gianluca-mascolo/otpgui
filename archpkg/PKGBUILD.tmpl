makedepends=(python-build python-installer python-poetry python-pytest)
depends=(python python-yaml python-gobject python-pyotp gtk3 sops)
source=('$OTP_SOURCE')
sha256sums=('$OTP_SHA256')
pkgname=otpgui
pkgver=$GIT_TAG
arch=('any')
license=('GPL')
pkgrel=1
build() {
    cd $pkgname-$pkgver
    python -m build --wheel --no-isolation
}

check(){
    cd "$srcdir/$pkgname-$pkgver"
    pytest
}

package() {
    cd $pkgname-$pkgver
    python -m installer --destdir="$pkgdir" dist/*.whl
    for Icon in $(find icons/ -name otpgui.png); do {
        IconDir=$(dirname "$Icon")
        IconSize=$(basename "$IconDir")
        install -D -m 0644 $Icon ${pkgdir}/usr/share/icons/hicolor/${IconSize}/apps
    }
    done
}
